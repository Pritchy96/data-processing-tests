<!DOCTYPE html>
<html lang="en">
  <head>
    <% include head.ejs %>
  </head>
  <body>
    <% include navbar.ejs %>

    <!-- Master container -->
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3">
          <% if (item) { %>
            <h1><%= item.itemID %></h1>
            ID: <%= item.itemID %><br>
            Version: <%= item.version %><br>
            Creation Date: <%= item.creation_date %><br>
            Revision Date: <%= item.revision_date %><br>
            File Pointer: <%= item.filepointer %><br>
            Tags:
            <ul>
            <% item.tags.forEach(function(tag) { %>
              <li><%= tag.key %>: <%= tag.value %></li>
            <% }); %>
            </ul>
          <% } else { %>
            <h1>Error</h1>
            No such item
          <% } %>
        </div>

        <!-- Add item fields -->
        <div class="col-sm-7">
          <h1>Stuff</h1>
          <div class="container-fluid">
          <% if (item) { %>
            <%= item.filepointer %>
          <% } else { %>
            No item
          <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
